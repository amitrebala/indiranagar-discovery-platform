# Supabase (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Upstash Redis (For Event Queue - Optional but Recommended)
UPSTASH_REDIS_REST_URL=https://your-instance.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-token

# Google Places API (Optional - For Event Discovery)
GOOGLE_PLACES_API_KEY=your-google-places-api-key

# Weather APIs (Optional)
OPENWEATHERMAP_API_KEY=your-openweather-key
WEATHERAPI_KEY=your-weatherapi-key

# Vercel Cron Secret (Auto-generated by Vercel)
CRON_SECRET=your-cron-secret

# Development Only
REDIS_HOST=localhost
REDIS_PORT=6379