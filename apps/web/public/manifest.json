  "shortcuts": [
    {
      "name": "Explore Map",
      "short_name": "Map",
      "description": "View the interactive map of Indiranagar places",
      "url": "/map",
      "icons": [
        {
          "src": "/images/icons/shortcut-map.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Search Places",
      "short_name": "Search",
      "description": "Search for specific places and recommendations",
      "url": "/search",
      "icons": [
        {
          "src": "/images/icons/shortcut-search.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Weather Recommendations",
      "short_name": "Weather",
      "description": "Find places perfect for today's weather",
      "url": "/?weather=today",
      "icons": [
        {
          "src": "/images/icons/shortcut-weather.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/json": [".json"],
        "text/csv": [".csv"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "web+indiranagar",
      "url": "/places/%s"
    }
  ],
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "play",
      "url": "https://play.google.com/store/apps/details?id=com.indiranagar.discovery",
      "id": "com.indiranagar.discovery"
    }
  ]
}